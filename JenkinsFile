pipeline {
    agent any

    tools {
        allure 'allure'
    }

    stages {
        stage('Clean') {
            steps {
                bat 'mvn clean'
            }
        }

        stage('Run Tests') {
            steps {
                bat 'mvn test'
            }
        }

        stage('Publish Allure Report') {
            steps {
                script {
                    
                    if (fileExists('allure-results')) {
                        echo "Allure results found. Publishing report..."
                        allure includeProperties: false,
                               jdk: '',
                               results: [[path: 'allure-results']]
                    } else {
                        echo "No allure-results folder found. Skipping report generation."
                    }
                }
            }
        }
    }

    post {
        always {
            archiveArtifacts artifacts: 'allure-results/**', allowEmptyArchive: true
        }
    }
}
